from tkinter import *
window=Tk()
window.title("GUI Examples For Using the Tkinter package")

#the font parameter can be passed to any widget to change its font,
#thus it applies to more than just labels.
lbl = Label(window, text="Welcome :-)", font=("Arial Bold", 30))
lbl.grid(column=200,row=100)


#dding the button to the window
#change the foreground of a button or any other widget using the fg property
#change the background color of any widget using the bg property.
btn1 = Button(window, text="File", bg="orange", fg="red")
btn1.grid(column=1, row=0)
btn2 = Button(window, text="Edit", bg="orange", fg="red")
btn2.grid(column=2, row=0)
btn3 = Button(window, text="Format", bg="orange", fg="red")
btn3.grid(column=3, row=0)
btn4 = Button(window, text="Run", bg="orange", fg="red")
btn4.grid(column=4, row=0)
btn5 = Button(window, text="Options", bg="orange", fg="red")
btn5.grid(column=5, row=0)
btn6 = Button(window, text="Window", bg="orange", fg="red")
btn6.grid(column=6, row=0)
btn7 = Button(window, text="Help", bg="orange", fg="red")
btn7.grid(column=7, row=0)

#set the default window size using the geometry function
window.geometry('800x500')

#the mainloop function calls the endless
# loop of the window,so the window will 
#wait for any user interaction till we close it.
window.mainloop()
